.attach_theme_islands
{
    font-family: Arial, Helvetica, sans-serif;

    display: inline-block;

    white-space: nowrap;

    .attach__control
    {
        position: absolute;
        z-index: 2;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;

        width: 100%;
        margin: 0;

        opacity: 0;
    }

    .attach__file,
    .attach__no-file
    {
        display: inline;

        margin-left: 0.4em;
    }

    .attach__clear
    {
        margin-left: 0.4em;

        cursor: pointer;

        &:before
        {
            content: 'Ã—';
        }
    }

    &.attach_disabled
    {
        .attach__no-file,
        .attach__file
        {
            opacity: 0.6;
        }

        /* TODO: disable clear in JS */
        .attach__clear
        {
            display: none;
        }
    }

    &.attach_size_s { font-size: 13px; }
    &.attach_size_m { font-size: 13px; }
    &.attach_size_l { font-size: 15px; }
    &.attach_size_xl { font-size: 18px; }

    .button
    {
        position: relative;

        &__text
        {
            display: inline;

            z-index: 1;
        }
    }
}
